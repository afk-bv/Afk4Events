      },
      new EventDto() {
        Name = "BBQ TestEvent",
        ThemeName = "dank",
        Location = "Location II",
        GroupId = new Guid(),
        Description = "BBQ @ Nick's place",
        ImageURL = "https://vignette.wikia.nocookie.net/universe-of-smash-bros-lawl/images/7/70/Inferno_Cop.jpg/revision/latest?cb=20160502030016"
      },
      new EventDto() {
        Name = "Hello World",
        ThemeName = "dank",
